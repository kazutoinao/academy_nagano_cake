<div class="container">
  <div class="row">
    <h4 class="header col-lg-2 text-center bg-light my-4 ml-5">さんの会員詳細</h4>
  </div>

   <div class="row">
    <div class="col-lg-offset-1 col-lg-8">
      <table class="table-noborder">
        <!--%= form_with model: @customer,url: admin_items_path, local: true do |f| %-->
        <tr>
          <td>会員id</td>
          <td><%= @costermer.id%></td>
        </tr>
        <tr >
          <td>氏名</td>
          <td><%= @customer.last_name %><%=@custmer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana%><% @custmer.first_name_kana%></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
         <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
         <tr>
          <td>会員ステータス</td>
          <td><%= @customer.is_active ? '有効' : '退会' %></td>
        </tr>
      　<!--% end %>-->
      </table>
      <%= link_to "編集",edit_admin_customer_path(@customer), class:"btn btn-success btn-lg"%>
    </div>
  </div>