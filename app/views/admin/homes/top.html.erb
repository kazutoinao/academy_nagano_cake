<div class="container">
  <div class="row">
    <h4 class="col-lg-2 text-center bg-light my-4 ml-5">注文履歴一覧</h4>
  </div>

<table class="col-lg-10 mx-auto">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.created_at %></td>
      <td><%= cart_item.customer.last_name %></td>
      <td><%= cart_item.amount %></td>
    </tr>
    <% end %>
  </tbody>
 </table>