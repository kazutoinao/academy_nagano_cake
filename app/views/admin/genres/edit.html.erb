<div class="container">
  <div class="row">
    <h3 class="col-lg-3 text-center bg-light my-5 ml-5">ジャンル編集</h3>
  </div>
  <div class="row">
    <div class="form-inline">
    <%= form_with model: @genre,url: admin_genre_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label:ジャンル名%>
        <%= f.text_field:name, :class "mx-5" %>
        <%= f.submit "変更を保存", :class "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>