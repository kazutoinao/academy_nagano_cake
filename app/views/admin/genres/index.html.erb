<div class="container">
  <div class="row">
    <h3 class="col-lg-3 text-center bg-light my-4 ml-5">ジャンル一覧・追加</h3>
  </div>
  <div class="row">
    <div class="form-inline">
    <%= form_with model: @genre,url: admin_genres_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label:ジャンル名, class:"ml-5"%>
        <%= f.text_field:name, class:"form-text my-5 mx-5" %>
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <table class="table col-lg-4 mt-4">
  <thead class="thead-light">
    <tr>
      <th colspan="2">ジャンル</th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集",edit_admin_genre_path(genre), class:"btn btn-success"%></td>
    </tr>
  </tbody>
  <% end %>
 </table>
</div>