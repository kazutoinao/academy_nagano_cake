
<div class="container">
  <h2>新規会員登録</h2>
  <%= form_with model: @public, url:customer_session_path, local: true do |f| %>
    <div class="row">
      <div class="col">
        <p>名前</p>
      </div>
      <div class="col">
        <%= f.label :"(姓)" %>
        <%= f.text_field :last_name %>
      </div>
      <div class="col">
        <%= f.label :"(名)" %>
        <%= f.text_field :first_name %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.label :"(ｾｲ)" %>
        <%= f.text_field :last_name_kana %>
      </div>
      <div class="col">
        <%= f.label :"(ﾒｲ)" %>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.label :"メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.label :"住所"%>
        <%= f.text_field :address %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.label :"電話番号（ハイフンなし）"%>
        <%= f.text_field :telephone_number%>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.label :"パスワード(６文字以上)" %><br/>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.label :"パスワード（確認用)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>


